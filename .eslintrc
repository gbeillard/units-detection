{
	"env": {
		"browser": true,
		"es2021": true
	},
	"extends": [
		"airbnb-base",
		"airbnb-typescript",
		"plugin:prettier/recommended"
	],
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": "latest",
		"sourceType": "module",
		"project": "./adventure-backend/tsconfig.json"
	},
	"plugins": [ 
		"@typescript-eslint",
		"prettier"
	],
	"ignorePatterns": ["**/*.js"],
	"rules": {
		"linebreak-style": "off",
		"prettier/prettier": [
			"error",
			{
				"endOfLine": "auto"
			}
		],
		 "import/prefer-default-export": "off",
		 "react/jsx-filename-extension": "off",
		 "import/extensions": [
			"error",
			"ignorePackages",
			{
			  "js": "never",
			  "jsx": "never",
			  "ts": "never",
			  "tsx": "never"
			}
		 ]
	}
}